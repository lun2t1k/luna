] %}

{% block content %}
<div class="title">
  <div class="container">
    <div class="title-wrap">
      <h1 class="theme dark text">tools</h1>
      <div class="theme dark text title-count">({{ links.length }})</div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container">
    <div class="content-grid">
    {% for link in links %}
      {{ Link.content(link) }}
    {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
